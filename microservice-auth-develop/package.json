{
  "name": "clap-auth",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:docker": "docker-compose -f ./dev/docker-compose.yml build && docker-compose -f ./dev/docker-compose.yml up -d clap-auth-api && docker-compose -f ./dev/docker-compose.yml logs -f clap-auth-api",
    "stop:docker": "docker-compose -f ./dev/docker-compose.yml stop",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json",
    "proto:install": "npm i git+https://gitlab.com/clap/clap-proto.git",
    "proto:auth": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto -I=./node_modules/grpc-nest-proto/proto --ts_proto_out=src/auth/ node_modules/grpc-nest-proto/proto/auth.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "protolocal:auth": "protoc --plugin=node_modules/.bin/protoc-gen-ts_proto --ts_proto_opt=addGrpcMetadata=true -I=./_proto --ts_proto_out=src/auth/ _proto/auth.proto --ts_proto_opt=nestJs=true --ts_proto_opt=fileSuffix=.pb",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "yarn typeorm -d ./src/auth/config/ormDataSource.ts migration:generate",
    "migration:create": "yarn typeorm migration:create",
    "migration:run": "yarn typeorm -d ./src/auth/config/ormDataSource.ts migration:run",
    "migration:revert": "yarn typeorm -d ./src/auth/config/ormDataSource.ts migration:revert",
    "migration:show": "yarn typeorm -d ./src/auth/config/ormDataSource.ts migration:show"
  },
  "dependencies": {
    "@grpc/grpc-js": "1.7.3",
    "@grpc/proto-loader": "0.7.3",
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/apollo": "^10.1.4",
    "@nestjs/common": "9.1.6",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.1.6",
    "@nestjs/graphql": "^10.1.5",
    "@nestjs/jwt": "9.0.0",
    "@nestjs/microservices": "9.1.6",
    "@nestjs/passport": "9.0.0",
    "@nestjs/platform-express": "9.1.6",
    "@nestjs/typeorm": "9.0.1",
    "apollo-server-express": "^3.10.3",
    "bcryptjs": "2.4.3",
    "clap-proto": "^1.0.33",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "graphql": "^16.6.0",
    "nodemailer": "6.8.0",
    "passport": "0.6.0",
    "passport-jwt": "4.0.0",
    "pg": "8.8.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.7",
    "typeorm": "0.3.10"
  },
  "devDependencies": {
    "@nestjs/cli": "9.1.4",
    "@nestjs/schematics": "9.0.3",
    "@nestjs/testing": "9.1.6",
    "@types/express": "4.17.14",
    "@types/jest": "29.2.0",
    "@types/node": "18.11.5",
    "@types/nodemailer": "6.4.6",
    "@types/passport-jwt": "^3.0.7",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.41.0",
    "@typescript-eslint/parser": "5.41.0",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "grpc-nest-proto": "github:hellokvn/grpc-nest-proto",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "source-map-support": "0.5.21",
    "supertest": "6.3.1",
    "ts-jest": "29.0.3",
    "ts-loader": "9.4.1",
    "ts-node": "10.9.1",
    "ts-proto": "1.131.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "4.8.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
